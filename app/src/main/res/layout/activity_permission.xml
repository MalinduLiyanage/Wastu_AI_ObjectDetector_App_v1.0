<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_big">

                </ImageView>

                <TextView
                    android:id="@+id/brand_text_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:maxLines="1"
                    android:text="Permission Request"
                    android:textColor="@color/colorPrimaryDark">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/cameraLayout"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_camera">

                        </ImageView>

                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/quicksand_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="CAMERA">

                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To capture images from your device.">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/locLayout"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_location">

                        </ImageView>

                        <TextView
                            android:id="@+id/loc_text"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/quicksand_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="ACCESS_COARSE_LOCATION">

                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To extract Geo location coordinates from your device.">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/storageLayout"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_storage">

                        </ImageView>

                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/quicksand_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="WRITE_EXTERNAL_STORAGE">

                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To Read and Write data on your device.">

                    </TextView>



                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <Button
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/permission_Btn"
            android:background="@drawable/bg_btn_primary"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:text="Grant Permissions"
            android:fontFamily="@font/quicksand_bold"
            android:layout_height="wrap_content">

        </Button>

        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can also grant permissions from device settings.">

        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>